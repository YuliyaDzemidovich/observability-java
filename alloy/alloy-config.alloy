// Logs config
// 1. Find log files
local.file_match "spring_logs" {
  path_targets = [{"__path__" = "/var/log/app/*.log"}]
  sync_period = "5s"
}

// 2. Read logs from files
loki.source.file "spring_log_scrape" {
  targets       = local.file_match.spring_logs.targets
  forward_to    = [loki.process.spring_pipeline.receiver]
  tail_from_end = true
}

// 3. Just passing through pipeline - drop/parse/enrich can be added later
loki.process "spring_pipeline" {
  forward_to = [loki.write.local.receiver]
}

// 4. Writing logs to Loki
loki.write "local" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

// Traces config
// 1. OTLP receiver - receives traces from the app
otelcol.receiver.otlp "default" {
  http {
    endpoint = "0.0.0.0:4318"
  }

  output {
    traces = [otelcol.processor.batch.traces.input]
  }
}

// 2. batching â€“ good practice
otelcol.processor.batch "traces" {
  output {
    traces = [otelcol.exporter.otlp.tempo.input]
  }
}

// 3. exporter to Tempo
otelcol.exporter.otlp "tempo" {
  client {
    endpoint = "http://tempo:4317"

    tls {
      insecure             = true
      insecure_skip_verify = true
    }
  }
}
